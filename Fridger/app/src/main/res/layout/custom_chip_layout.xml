<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/customChipId"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:background="@drawable/custom_chip"
    android:layout_marginHorizontal="5dp"
    android:layout_marginTop="10dp">
    <TextView
        android:id="@+id/chipTextId"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="5dp"
        android:textColor="#151100"
        android:textSize="18dp"
        android:paddingLeft="3dp"
        android:paddingBottom="5dp"
        android:paddingEnd="20dp"
        android:layout_centerVertical="true"
        android:fontFamily="@font/montserrat"
        />

    <ImageButton
        android:id="@+id/chipIconId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_close_black_12dp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@id/chipTextId"
        />

</RelativeLayout>